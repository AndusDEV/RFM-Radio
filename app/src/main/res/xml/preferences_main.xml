<PreferenceScreen
		xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
			android:key="tuner"
			android:title="@string/pref_header_tuner">
		<SwitchPreferenceCompat
				android:key="tuner_step"
				android:defaultValue="false"
				android:title="@string/pref_tuner_step"
				android:summaryOn="@string/pref_tuner_step_100kHz"
				android:summaryOff="@string/pref_tuner_step_50kHz"
				android:icon="@drawable/ic_step_freq"/>
		<SwitchPreferenceCompat
				android:key="tuner_rds"
				android:defaultValue="true"
				android:title="@string/pref_tuner_rds_enable"
				android:summaryOn="@string/pref_tuner_rds_enabled"
				android:summaryOff="@string/pref_tuner_rds_disabled"
				android:icon="@drawable/ic_rds"/>
		<ListPreference
				android:key="tuner_driver"
				android:defaultValue="0"
				android:title="@string/pref_tuner_driver"
				android:icon="@drawable/ic_tuner_driver"/>
		<EditTextPreference
				android:key="tuner_antenna"
				android:defaultValue="0"
				android:title="Antenna"
				android:icon="@drawable/ic_antenna"/>
	</PreferenceCategory>
	<PreferenceCategory
			android:key="audio"
			android:title="@string/pref_header_audio">
		<ListPreference
				android:key="audio_service"
				android:defaultValue="0"
				android:title="@string/pref_audio_service"/>
		<ListPreference
				android:key="audio_source"
				android:title="@string/pref_audio_source"
				android:icon="@drawable/ic_audio_source"/>
	</PreferenceCategory>
	<PreferenceCategory
			android:key="app"
			android:title="@string/pref_header_app">
		<SwitchPreferenceCompat
				android:key="app_auto_startup"
				android:defaultValue="true"
				android:summaryOn="@string/pref_app_auto_startup_enabled"
				android:summaryOff="@string/pref_auto_startup_disabled"
				android:title="@string/pref_app_auto_startup"
				android:icon="@drawable/ic_autostart"/>
	</PreferenceCategory>
	<PreferenceCategory
			android:key="info"
			android:title="@string/pref_header_info">
		<Preference
				android:id="@+id/pref_info_link_4pda"
				android:key="info_links_4pda"
				android:title="@string/pref_info_link_4pda"
				android:icon="@drawable/ic_4pda_logo">
			<intent
					android:action="android.intent.action.VIEW"
					android:data="http://4pda.ru/forum/index.php?showtopic=543819&amp;st=570#entry76841416" />
		</Preference>
		<Preference
				android:key="info_links_github"
				android:title="@string/pref_info_link_github"
				android:icon="@drawable/ic_github">
			<intent
					android:action="android.intent.action.VIEW"
					android:data="https://www.github.com/vladislav805/RFM-Radio" />
		</Preference>
		<Preference
				android:key="info_links_telegram"
				android:title="@string/pref_info_link_telegram"
				android:icon="@drawable/ic_telegram">
			<intent
					android:action="android.intent.action.VIEW"
					android:data="https://t.me/RFMRadioApp" />
		</Preference>
		<Preference
				android:id="@+id/pref_info_author_vv"
				android:key="pref_info_author_vv"
				android:title="@string/pref_info_author_vv_title"
				android:summary="@string/pref_info_author_vv_sub"/>
	</PreferenceCategory>
</PreferenceScreen>
