<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:animateLayoutChanges="true"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="?android:selectableItemBackgroundBorderless"
		tools:context=".activity.MainActivity"
		android:orientation="vertical">

	<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/main_loading"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:visibility="invisible">

		<ProgressBar
				style="?android:attr/progressBarStyleLarge"
				android:layout_width="76dp"
				android:layout_height="wrap_content"
				android:id="@+id/progressBar"
				android:layout_marginBottom="1dp"
				app:layout_constraintVertical_chainStyle="packed"
				app:layout_constraintBottom_toTopOf="@+id/app_name"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"/>

		<TextView
				style="@android:style/TextAppearance.Material.Large"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/app_name"
				android:id="@+id/app_name"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/progressBar"
				app:layout_constraintEnd_toEndOf="parent"/>

		<TextView
				android:id="@+id/app_version"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/app_name"/>

	</androidx.constraintlayout.widget.ConstraintLayout>

	<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/main_player"
			android:visibility="visible"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<com.vlad805.fmradio.view.RadioUIView
				android:id="@+id/frequency_info"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"/>

		<ImageButton
				android:src="@drawable/ic_seek_down"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/ctl_seek_down"
				android:background="?android:selectableItemBackgroundBorderless"
				android:contentDescription="@string/ctl_seek_down"
				app:layout_constraintEnd_toStartOf="@+id/ctl_go_down"
				app:layout_constraintTop_toTopOf="@+id/ctl_toggle"/>

		<ImageButton
				android:src="@drawable/ic_go_down"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/ctl_go_down"
				android:background="?android:selectableItemBackgroundBorderless"
				android:contentDescription="@string/ctl_step_down"
				app:layout_constraintEnd_toStartOf="@+id/ctl_toggle"
				app:layout_constraintTop_toTopOf="@+id/ctl_toggle"/>

		<ImageButton
				android:src="@drawable/ic_pause"
				android:layout_width="36dp"
				android:layout_height="wrap_content"
				android:id="@+id/ctl_toggle"
				android:background="?android:selectableItemBackgroundBorderless"
				android:contentDescription="@string/ctl_toggle_pause"
				app:layout_constraintTop_toBottomOf="@+id/frequency_info"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"/>

		<ImageButton
				android:src="@drawable/ic_go_up"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/ctl_go_up"
				android:background="?android:selectableItemBackgroundBorderless"
				android:contentDescription="@string/ctl_step_up"
				app:layout_constraintStart_toEndOf="@+id/ctl_toggle"
				app:layout_constraintTop_toTopOf="@+id/ctl_toggle"/>

		<ImageButton
				android:src="@drawable/ic_seek_up"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/ctl_seek_up"
				android:background="?android:selectableItemBackgroundBorderless"
				android:contentDescription="@string/ctl_seek_up"
				app:layout_constraintStart_toEndOf="@+id/ctl_go_up"
				app:layout_constraintTop_toTopOf="@+id/ctl_toggle"/>

		<com.vlad805.fmradio.view.PresetListView
				android:id="@+id/preset_list"
				android:layout_width="match_parent"
				android:layout_height="@dimen/preset_list_height"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>

	</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>